<form class="form-horizontal form-box" action="/user/login" method="post">
	<h4 class="form-box-header">Login</h4>
	<div class="form-box-content">


		<div class="control-group">
			<label class="control-label">Username</label>
			<div class="controls">
				<input  data-placement="right" type="text" name="username">
			</div>
		</div>

		<div class="control-group">
			<label class="control-label">Password</label>
			<div class="controls">
				<input  data-placement="right" type="password" name="password">
			</div>
		</div>

		<div class="form-actions">
			<button class="btn btn-success"><i class="icon-save"></i> Login </button>
		</div>

	</div>
</form>